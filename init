source "${HI_CLI_HOME}/bin/colors"
#source "${HI_CLI_HOME}/bin/clap"
source "${HI_CLI_HOME}/bin/logging"
###############################################################################
function run() {
  ssh_host=${arg2}
  cli="ssh ${ssh_user}@${ssh_host} -p ${ssh_port}"

  ${cli}

  result=$?

  eval $1="\${result}"
  eval $2="\${cli}"
}

